{
  "name": "kairos-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "start": "nest start",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:all": "dotenv -e .env.development npm run prisma:migrate && dotenv -e .env.development npm run start:services",
    "start:services": "concurrently \"npm run start:core\" \"npm run start:chat\" \"npm run start:server\" \"npm run start:files\"",
    "start:core": "npm run start core",
    "start:chat": "npm run start chat",
    "start:server": "npm run start server",
    "start:files": "npm run start files",
    "prisma:gen": "npm run prisma:gen:user && npm run prisma:gen:chat && npm run prisma:gen:server",
    "prisma:gen:user": "prisma generate --schema=./prisma/user/schema.prisma",
    "prisma:gen:chat": "prisma generate --schema=./prisma/chat/schema.prisma",
    "prisma:gen:server": "prisma generate --schema=./prisma/server/schema.prisma",
    "prisma:migrate": "npm run prisma:migrate:user && npm run prisma:migrate:chat && npm run prisma:migrate:server",
    "prisma:migrate:user": "prisma migrate dev --schema=./prisma/user/schema.prisma",
    "prisma:migrate:chat": "prisma migrate dev --schema=./prisma/chat/schema.prisma",
    "prisma:migrate:server": "prisma migrate dev --schema=./prisma/server/schema.prisma",
    "prisma:migrate:deploy": "npm run prisma:migrate:deploy:user && npm run prisma:migrate:deploy:chat && npm run prisma:migrate:deploy:server",
    "prisma:migrate:deploy:user": "prisma migrate deploy --schema=./prisma/user/schema.prisma",
    "prisma:migrate:deploy:chat": "prisma migrate deploy --schema=./prisma/chat/schema.prisma",
    "prisma:migrate:deploy:server": "prisma migrate deploy --schema=./prisma/server/schema.prisma",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/discord-server/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/discord-server/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.15",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^10.4.15",
    "@prisma/client": "^6.1.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.5",
    "argon2": "^0.41.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cross-env": "^7.0.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.21",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "prisma": "^6.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/core-lib(|/.*)$": "<rootDir>/libs/core-lib/src/$1"
    }
  }
}
